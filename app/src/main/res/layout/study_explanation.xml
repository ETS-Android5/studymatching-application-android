<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/container">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/PostDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:id="@+id/toolbarPostTitle"
            android:text=""
            android:textStyle="bold"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#5D6467" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ExplanationStudyName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:hint="스터디 이름"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#5D6467" />

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="스터디 주제"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#5D6467" />

            <TextView
                android:id="@+id/ExplanationStudyKind"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:hint="스터디 주제"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#5D6467" />

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:hint="인원 수"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#5D6467" />

            <TextView
                android:id="@+id/ExplanationNumOfMembers"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="최대 인원수"
                android:inputType="number"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#5D6467" />

        <TextView
            android:id="@+id/ExplanationStudyContent"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:hint="스터디 소개" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/study_explanation_apply"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="신청"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>